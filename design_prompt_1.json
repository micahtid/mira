        "4": "16px",
        "5": "20px",
        "6": "24px",
        "8": "32px",
        "10": "40px",
        "12": "48px",
        "16": "64px",
        "20": "80px",
        "24": "96px",
        "32": "128px"
      },
      "responsivePaddingPatterns": {
        "sectionDefault": "px-6 sm:px-8 md:px-10 lg:px-12",
        "sectionTight": "px-4 sm:px-6 md:px-8 lg:px-10",
        "sectionWide": "px-8 sm:px-10 md:px-12 lg:px-16",
        "contentBlock": "px-6 sm:px-8 md:px-10",
        "testimonialCard": "px-3 py-6 xs:px-4 xs:py-8 sm:p-6",
