    },

    "borderWidth": {
      "none": "0",
      "thin": "1px",
      "base": "2px",
      "thick": "3px",
      "heavy": "4px"
    },

    "shadows": {
      "sm": "0 1px 2px 0 rgba(0, 0, 0, 0.05)",
      "base": "0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06)",
      "md": "0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06)",
      "lg": "0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05)",
      "xl": "0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04)",
      "phone": "0px 4px 57.3px 0px rgba(0, 0, 0, 0.25)",
      "phoneDark": "0px 4px 57.3px 0px rgba(255, 255, 255, 0.15)",
      "_usage": {
        "buttons": "NO SHADOWS - buttons use solid backgrounds only",
        "cards": "Use 'sm' or 'md' only - avoid xl shadows for flat, modern look",
        "principle": "Minimal shadows throughout - prefer flat design with subtle depth"
      }
    },

    "transitions": {
      "fast": "100ms",
      "base": "200ms",
      "normal": "300ms",
      "slow": "500ms",
      "slower": "700ms",
      "_guidelines": {
        "hover": "Use color, opacity, background changes - NO translate/transform",
        "scale": "Subtle scale (1.03 max) acceptable for cards on hover",
        "duration": "Keep most transitions at 200ms for snappy feel",
        "forbidden": "No -translate-y, translate-x, or vertical movement on hover"
      }
    },

    "zIndex": {
      "hide": -1,
      "base": 0,
      "dropdown": 10,
      "sticky": 20,
      "overlay": 30,
      "modal": 40,
      "popover": 50,
      "tooltip": 60
    },

    "breakpoints": {
      "mobile": "0px",
      "tablet": "768px",
      "desktop": "1024px",
      "wide": "1280px",
      "ultrawide": "1536px"
    },

    "opacity": {
      "0": 0,
      "10": 0.1,
      "20": 0.2,
      "30": 0.3,
      "40": 0.4,
      "50": 0.5,
      "60": 0.6,
      "70": 0.7,
      "80": 0.8,
      "90": 0.9,
      "100": 1
    }
  },

  "___IMPLEMENTATION_SUMMARY___": {
    "typography": {
      "approach": "Mobile-first responsive scaling",
      "classes": {
        "default-heading": "text-3xl on mobile → text-5xl on desktop",
        "default-text": "text-sm on mobile → text-lg on desktop",
        "default-label": "text-xs on mobile → text-base on desktop"
      },
      "result": "Better readability on mobile with meaningful white space"
    },
    "spacing": {
      "horizontal": {
        "mostSections": "px-6 sm:px-8 md:px-10 lg:px-12",
        "testimonials": "px-4 sm:px-6 md:px-8 lg:px-10 (tighter)",
        "footer": "px-8 sm:px-10 md:px-12 lg:px-16 (wider)"
      },
      "vertical": {
        "hero": "pt-40 md:pt-48 (extends behind navbar)",
        "faq": "py-8 on mobile (reduced from py-12)",
        "cta": "py-12 sm:py-20 md:py-32 (progressive)"
      },
      "principle": "More padding on larger screens for generous white space"
    },
    "shadows": {
      "buttons": "REMOVED - no shadows on any buttons",
      "cards": "Reduced to sm/md only (was xl/2xl)",
      "navbar": "Changed from shadow-xl to shadow-sm",
      "result": "Flat, modern aesthetic with subtle depth"
    },
    "animations": {
      "removed": "All translate effects on hover",
      "kept": "Color transitions, opacity changes, subtle scale (max 1.03)",
      "duration": "200ms standard for snappy interactions"
    },
    "colorUsage": {
      "primary": "Purple (#6d51fb) - maintained from original design",
      "intensity": "Reduced purple opacity significantly (0.06 vs 0.1)",
      "variety": "Added secondary (blue) and accent (pink) for diversity",
      "badges": "All use consistent primary-50/primary-500"
    },
    "components": {
      "testimonials": "Reduced from 3 to 2 cards",
      "grid": "Changed from lg:grid-cols-3 to lg:grid-cols-2",
      "footer": "Enhanced responsive design with 2-col mobile grid",
      "pricing": "Uses consistent design system text classes"
    }
  }
